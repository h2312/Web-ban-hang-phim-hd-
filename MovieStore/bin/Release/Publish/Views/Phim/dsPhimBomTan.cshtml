@model List<MovieStore.Models.phim>
@{
    ViewBag.Title = "PhimBomTan";
}


<div class="inner">
    @for (int i = 0; i < Model.Count(); i++)
    {
        if (i % 2 == 0)
        {
            <div class="leftbox">
                <h3>@Model[i].tenphim</h3>
                <img src="@Model[i].hinh" width="93" height="95" alt="photo" class="left" />
                <p><b>Price:</b> <b>$@Model[i].gia</b> .</p>
                <p><b>Availability:</b> @Model[i].availability</p>
                <p class="readmore"><a href='@Url.Action("Chitiet", "phim", new { pid = Model[i].idphim })'>De<b>tail</b></a></p>
                <div class="clear"></div>
            </div>
        }

        else
        {

            <div class="rightbox">
                <h3>@Model[i].tenphim</h3>
                <img src="@Model[i].hinh" width="107" height="91" alt="photo" class="left" />
                <p><b>Price:</b> <b>$@Model[i].gia</b>.</p>
                <p><b>Availability:</b>@Model[i].availability</p><br><br>
                <p class="readmore"><a href='@Url.Action("Chitiet","phim", new { pid=Model[i].idphim})'>De<b>tail</b></a></p>

                <div class="clear"></div>
            </div>
            <div class="clear br"></div>
            @Html.Raw("</div><div class='inner'>")
        }

    }
</div>
